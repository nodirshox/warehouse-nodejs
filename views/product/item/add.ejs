<%- include('../../base/header') %>

<section class="content">
    <div class="container-fluid card p-3">
        <h2>Mahsulot qo'shish</h2>
        <form action="/product/add_product" method="POST">
            <div class="form-group">
                <label>Nomi</label>
                <input type="text" class="form-control" name="name" autocomplete="off" maxlength="128" required>
            </div>
            <div class="form-group">
                <label>Izoh</label>
                <input type="text" class="form-control" name="description" autocomplete="off" maxlength="256">
            </div>
            <div class="form-group">
                <label>Narxi</label>
                <input type="number" class="form-control" name="price" autocomplete="off" required>
            </div>
            <div class="form-group">
                <label>Rasm uchun havola</label>
                <input type="text" class="form-control" name="picture" autocomplete="off" placeholder="http://site.com/image.jpg" required>
            </div>
            <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> Qo'shish</button>
            <a href="/product" class="btn btn-secondary"><i class="fas fa-angle-left"></i> Ortga</a>
        </form>
    </div>
</section>

<%- include('../../base/footer') %>