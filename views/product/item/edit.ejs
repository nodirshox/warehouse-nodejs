<%- include('../../base/header') %>

<section class="content">
    <div class="container-fluid card p-3">
        <h2>Mahsulotni o'zgartirish</h2>
        <form action="/product/add_product" method="POST">
            <div class="form-group">
                <label>Nomi</label>
                <input type="text" class="form-control" name="name" autocomplete="off" maxlength="128" value="<%= product.name %>" required>
            </div>
            <div class="form-group">
                <label>Izoh</label>
                <input type="text" class="form-control" name="description" autocomplete="off" value="<%= product.description %>" maxlength="256">
            </div>
            <div class="form-group">
                <label>Narxi</label>
                <input type="number" class="form-control" name="price" autocomplete="off" value="<%= product.price %>" required>
            </div>
            <div class="form-group">
                <label>Rasm uchun havola</label>
                <input type="text" class="form-control" name="picture" autocomplete="off" value="<%= product.picture %>" required>
            </div>
            <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> Saqlash</button>
            <a href="/product/all_product" class="btn btn-secondary"><i class="fas fa-angle-left"></i> Ortga</a>
        </form>
        <hr>
        <h2>Mahsulotni o'chirish</h2>
        <form action="" method="POST">
            <p>Siz rostdan ham "<b><%= product.name %></b>" ni o'chirmoqchimisiz?</p>
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> O'chirish</button>
        </form>
    </div>
</section>

<%- include('../../base/footer') %>