<%- include('../base/header') %>

<section class="content">
    <div class="container-fluid card p-3">
        <h2>Paket qo'shish</h2>
        <form action="/product/create" method="POST">
            <div class="form-group">
                <label>Nomi</label>
                <input type="text" class="form-control" name="name" autocomplete="off" maxlength="128" required>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>To'plam</label>
                        <input type="text" class="form-control" name="price" autocomplete="off">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Mahsulot</label>
                                <select class="form-control select2" style="width: 100%;">
                                    <% products.map((product) => { %>
                                        <option><%= product.name %></option>
                                    <% }) %>
                                </select>                        
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Soni</label>
                                <input type="text" class="form-control" name="price" placeholder="0" autocomplete="off">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Amal</label><br />
                                <a href="/product" class="btn btn-secondary btn-sm"><i class="fas fa-sm fa-trash"></i></a>
                            </div>
                        </div>
                        <div class="form-group">
                            <a href="/product" class="btn btn-success btn-sm ml-2"><i class="fas fa-sm fa-plus"></i></a>
                        </div>

                    </div>
                </div>
            </div>
            <a href="/product" class="btn btn-success btn-sm"><i class="fas fa-sm fa-plus"></i></a>
            <hr>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputState">Mahsulot narxlari</label>
                    <select class="form-control select2" style="width: 100%;">
                    <% products.map((product) => { %>
                        <option><%= product.name %></option>
                    <% }) %>
                </select>
                </div>
                <div class="form-group col-md-5">
                    <label>Mahsulot narxlari</label>
                    <input type="text" class="form-control">
                    </div>
                <div class="form-group col-md-1">
                    <label>Amal</label><br />
                    <a href="/product" class="btn btn-secondary btn-sm"><i class="fas fa-sm fa-trash"></i></a>
                </div>
            </div>
            <a href="/product" class="btn btn-success btn-sm"><i class="fas fa-sm fa-plus"></i></a>
            <hr>
            <button type="submit" class="btn btn-info"><i class="fas fa-sm fa-plus"></i> Qo'shish</button>
            <a href="/product" class="btn btn-secondary"><i class="fas fa-sm fa-angle-left"></i> Ortga</a>
        </form>
    </div>
</section>

<%- include('../base/footer') %>